
{% import '../macros/equippedItem.njk' as equipped %}
{% import '../macros/counterBox.njk' as counterBox %}

<div class="sheet-area-equipment">
    <div class="sheet-container">
        <div class="sheet-section-weapons">
            <div class="sheet-block-weapons">
                <div class="sheet-weapon">
                    {{equipped.create(jsonData.items.equipTypes.melee, 'equipped_melee', jsonData.items, 'Equipped Melee Weapon')}}
                </div>
                <div class="sheet-weapon">
                    {{equipped.create(jsonData.items.equipTypes.ranged, 'equipped_ranged', jsonData.items, 'Equipped Ranged Weapon')}}
                </div>
            </div>
            <div class="sheet-block-special">
                {{equipped.create(jsonData.items.equipTypes.special, 'equipped_special', jsonData.items, 'Special Item')}}
            </div>
        </div>
        <div class="sheet-section-ammo">
            <div class="sheet-ammo-counters">
                {{ counterBox.create('Ammunition', jsonData.items.ammoTypes, jsonData.items.customCounters.ammo_custom_count, jsonData.items.customCounters.ammo_label, jsonData.items.customCounters.ammo_attr)}}
            </div>
        </div>
    </div>
    <div class="sheet-section-armor">
        <div class="sheet-row">
            {{equipped.create(jsonData.items.equipTypes.head,'equipped_armor_head', jsonData.items, 'Equipped Head Armor')}}
            {{equipped.create(jsonData.items.equipTypes.body,'equipped_armor_body', jsonData.items, 'Equipped Body Armor')}}
        </div>
        <div class="sheet-row">
            {{equipped.create(jsonData.items.equipTypes.arm,'equipped_armor_arms', jsonData.items, 'Equipped Arm Armor')}}
            {{equipped.create(jsonData.items.equipTypes.leg,'equipped_armor_leg', jsonData.items, 'Equipped Leg Armor')}}
        </div>
    </div>
</div>