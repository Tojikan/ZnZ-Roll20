{% macro create(name='', attr='', value='0', displayMax=true) %}
    <div class="sheet-znz-field sheet-znz-stat-block">
        <h2>{{ name }}</h2>
        <input type="number" name="attr_{{ attr }}" value="{{ value }}"/>
        <div class="sheet-znz-description">
            <input type="hidden" name="attr_{{ attr }}_max" value="{{ value }}"/>
                {% if displayMax %}
                Max: <span readonly name="attr_{{ attr }}_max"></span>
                {% endif %}
        </div>
    </div>

{% endmacro %}