{# Output the attribute table
    - data - array of all attributes fields
    - vals - array of attribute mins, maxes, and default values
    - headerArray - array of strings for header. Should be only 3 of them
#}

{% macro create(data="", vals = "" , headerArray= ["Attribute", "Score", "Bonus"]) %}
<table class="sheet-znz-row-table">
    {% if headerArray %}
    <tr class="sheet-znz-header">
    {% for head in headerArray %}
        <th>{{ head }}</th>
    {% endfor %}
    </tr>
    {% endif %}
        

    {% for field in data %}
    <tr>
        <td>
            <button type="roll" class="sheet-znz-hidden-roll-button" value="/roll 1d10 + 0@{{'{'}}{{field.attr_name}}_mod{{'}'}}  + 0@{{'{'}}{{field.attr_name}}_bonus{{'}'}}  ({{field.display_name}} Check)" name="roll_{{field.attr_name}}check">
            <h3>{{field.display_name}}</h3>
            <div class="sheet-znz-description">
                {{field.reminder_note}}
            </div>
            </button>
        </td>
        <td><input type="number" name="attr_{{field.attr_name}}" min="{{vals.min}}" value="{{vals.default}}" max="{{vals.max}}" /></td>
        <td>
            <div class="sheet-znz-attr-mod">
                <input type="number" readonly name="attr_{{field.attr_name}}_mod" value={{field.mod_default}} />
                <div class="sheet-znz-attr-bonus">
                    {# This select is for styli#}
                    <input class="sheet-znz-hidden sheet-znz-bonus-checker-minus" type="checkbox" name="attr_{{ field.attr_name}}_bonus_check" value="negative" />
                    <input class="sheet-znz-hidden sheet-znz-bonus-checker-plus" type="checkbox" name="attr_{{ field.attr_name}}_bonus_check" value="positive" />
                    <span readonly class="sheet-znz-bonus-display" name="attr_{{field.attr_name}}_bonus"></span>
                </div>
            </div>
        </td>
    </tr>
    
    {% endfor %}


</table>

{% endmacro %}